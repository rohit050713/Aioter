<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<FrameLayout
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_12sdp"
        android:background="@color/dialog_bg"
        android:layout_marginTop="@dimen/_4sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_header"
            android:fontFamily="@font/bauhausregular"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/add_schedule_header"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_20sdp"/>
        <Button
            android:id="@+id/btn_addschedule_onetime"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="@string/add_schedule_btn1"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:fontFamily="@font/baumans"
            android:textAllCaps="false"
            android:elevation="@dimen/_5sdp"
            android:shadowColor="@color/white"
            />
        <Button
            android:id="@+id/btn_addschedule_recurrence"

            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="@string/add_schedule_btn2"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:fontFamily="@font/baumans"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/_35sdp"
            android:elevation="@dimen/_5sdp"
            android:shadowColor="@color/white"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/add_schedule_close"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_margin="@dimen/_6sdp"
        android:src="@drawable/invalid_name"
        android:layout_gravity="right|top"/>
</FrameLayout>
</FrameLayout>