<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RoomFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/myprofile_bg"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >
        <ImageView
            android:id="@+id/lamp_icon"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/lamp_icon_white"/>
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:src="@mipmap/on_copy_9"
                android:layout_height="@dimen/_40sdp"
                android:paddingTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_150sdp"


                />
        </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Stand Lamp"
           android:textColor="@color/white"
           android:textSize="@dimen/_15ssp"
           android:textStyle="bold"
           android:fontFamily="@font/bauhausregular"
           android:gravity="center_vertical"
           android:paddingTop="@dimen/_10sdp"
           android:paddingStart="@dimen/_10sdp"
           android:paddingBottom="@dimen/_5sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Running : 11:03"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/bauhausregular"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10sdp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logs"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/bauhausregular"
            android:textSize="@dimen/_15ssp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/room_fragment_spinner1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:background="@color/myprofile_bg"
                />
            <Spinner
                android:id="@+id/room_fragment_spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@color/myprofile_bg"

                />

        </LinearLayout>
    </LinearLayout>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/room_fragment_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@color/myprofile_bg"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_35sdp"

        />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>