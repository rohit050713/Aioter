<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#191818"
        android:orientation="vertical"
        tools:context=".DeviceSitchActivityWithRoomActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/backbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/baumans"
                    android:gravity="center"
                    android:text="Devices"
                    android:textColor="#fff"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/baumans"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Select Room"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14ssp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="#000">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:layout_marginBottom="2sp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lladdroomf"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/add_room_button"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/addicon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/room_icon_one_png" />

                            <TextView
                                android:id="@+id/addroom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/baumans"
                                android:text="Room 1"
                                android:textColor="#f47733"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="2dp"
                            android:background="#282525"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/room_icon_two_white_png" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/baumans"
                                android:text="Master Bedroom"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="2dp"
                            android:background="#282525"

                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/room_icon_three_white_png" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/baumans"
                                android:text="Living Room"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="2dp"
                            android:background="#282525"

                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/room_icon_four_white_png" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/baumans"
                                android:text="Kitchen"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="2dp"
                            android:background="#282525"

                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/room_icon_five_white_png" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/baumans"
                                android:text="Restroom"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/baumans"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Add switch details"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/baumans"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="( 5 Switches )"
                    android:textColor="#fff"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/baumans"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Switch 1"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp">

                    <ImageView
                        android:id="@+id/switch1Lamp"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/lamp_icon" />

                    <ImageView
                        android:id="@+id/switch1Bulb"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/bulb_icon_white" />

                    <ImageView
                        android:id="@+id/switch1Fan"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/fan_icon_white" />

                    <EditText
                        android:id="@+id/switch1EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_background"
                        android:gravity="center_vertical|start"
                        android:hint="Switch item name"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/_6sdp"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#797878" />

                </LinearLayout>

                <TextView
                    android:id="@+id/errorSwitch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CD2121"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:visibility="gone"
                    android:text="*Please enter name."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/baumans"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Switch 2"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp">
                    <ImageView
                        android:id="@+id/switch2Lamp"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/lamp_icon" />

                    <ImageView
                        android:id="@+id/switch2Bulb"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/bulb_icon_white" />

                    <ImageView
                        android:id="@+id/switch2Fan"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/fan_icon_white" />

                    <EditText
                        android:id="@+id/switch2EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_background"
                        android:gravity="center_vertical|start"
                        android:hint="Switch item name"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/_6sdp"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#797878" />
                </LinearLayout>

                <TextView
                    android:id="@+id/errorSwitch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CD2121"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/baumans"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Switch 3"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp">
                    <ImageView
                        android:id="@+id/switch3Lamp"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/lamp_icon" />

                    <ImageView
                        android:id="@+id/switch3Bulb"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/bulb_icon_white" />

                    <ImageView
                        android:id="@+id/switch3Fan"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/fan_icon_white" />

                    <EditText
                        android:id="@+id/switch3EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_background"
                        android:gravity="center_vertical|start"
                        android:hint="Switch item name"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/_6sdp"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#797878" />
                </LinearLayout>

                <TextView
                    android:id="@+id/errorSwitch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CD2121"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/baumans"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Switch 4"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp">
                    <ImageView
                        android:id="@+id/switch4Lamp"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/lamp_icon" />

                    <ImageView
                        android:id="@+id/switch4Bulb"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/bulb_icon_white" />

                    <ImageView
                        android:id="@+id/switch4Fan"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/fan_icon_white" />

                    <EditText
                        android:id="@+id/switch4EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_background"
                        android:gravity="center_vertical|start"
                        android:hint="Switch item name"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/_6sdp"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#797878" />

                </LinearLayout>

                <TextView
                    android:id="@+id/errorSwitch4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CD2121"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/baumans"
                    android:paddingLeft="@dimen/_12sdp"
                    android:text="Switch 5"
                    android:textColor="#fff"
                    android:textSize="@dimen/_14ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp">
                    <ImageView
                        android:id="@+id/switch5Lamp"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/lamp_icon" />

                    <ImageView
                        android:id="@+id/switch5Bulb"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/bulb_icon_white" />

                    <ImageView
                        android:id="@+id/switch5Fan"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/fan_icon_white" />

                    <EditText
                        android:id="@+id/switch5EditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edittext_background"
                        android:gravity="center_vertical|start"
                        android:hint="Switch item name"
                        android:maxLength="20"
                        android:paddingLeft="@dimen/_6sdp"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:textColorHint="#797878" />

                </LinearLayout>

                <TextView
                    android:id="@+id/errorSwitch5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CD2121"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/savebutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_23sdp"
                    android:layout_marginTop="@dimen/_28sdp"
                    android:layout_marginRight="@dimen/_24sdp"
                    android:layout_marginBottom="@dimen/_48sdp"
                    android:background="@drawable/white_button"
                    android:fontFamily="@font/baumans"
                    android:text="Save"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>