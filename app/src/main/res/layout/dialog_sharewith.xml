<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:background="@color/dialog_bg"
        android:layout_marginTop="@dimen/_4sdp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_header"
            android:fontFamily="@font/bauhausregular"
            android:gravity="center"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/sharewith_header"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/bauhausregular"
            android:text="@string/sharewith_details"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_sharewith_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curveedittext_bg"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:hint="@string/sharewith_email"
            android:fontFamily="@font/bauhausregular"
            android:textSize="@dimen/_15ssp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_20sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/sharewith_valid"
                android:fontFamily="@font/bauhausregular"
               android:paddingLeft="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15ssp"
                android:layout_weight="1"
                android:textStyle="bold"
                />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:background="@drawable/curveedittext_bg"
               android:layout_weight="1"
               android:gravity="center"
               >
            <TextView
                android:id="@+id/tv_sharewith_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/sharewith_date"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/bauhausregular"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                />
               <ImageView
                   android:id="@+id/iv_sharewith_calendar"
                   android:layout_width="@dimen/_24sdp"
                   android:layout_height="@dimen/_24sdp"
                   android:src="@drawable/calendar"
                   android:layout_weight="1"
                   android:padding="@dimen/_3sdp"/>

           </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sharewith_assign"
            android:fontFamily="@font/bauhausregular"
            android:paddingLeft="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textStyle="bold"

            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_marginLeft="@dimen/_20sdp"



            >
        <RadioButton
            android:id="@+id/radiobtn_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sharewith_assign_data1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/bauhausregular"
            android:paddingLeft="@dimen/_5sdp"
            />
        <RadioButton
            android:id="@+id/radiobtn_user"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sharewith_assign_data2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/bauhausregular"
            android:paddingLeft="@dimen/_5sdp"
            />
        <RadioButton
            android:id="@+id/radiobtn_admin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sharewith_assign_data3"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15ssp"
            android:paddingLeft="@dimen/_5sdp"
            android:fontFamily="@font/bauhausregular"

            />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_30sdp"

            >
            <Button
                android:id="@+id/btn_sharewith_cancel"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/dialog_header"
                android:text="@string/sharewith_btn1"
                android:layout_gravity="center"
                android:fontFamily="@font/baumans"

                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textAllCaps="false"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="@dimen/_50sdp"

                />
            <Button
                android:id="@+id/btn_sharewith_share"

                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/dialog_header"
                android:text="@string/sharewith_btn2"
                android:layout_gravity="end"

                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="@dimen/_5sdp"
                android:textAllCaps="false"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/baumans"
                android:textStyle="bold"


                />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_gravity="right|top"
        android:layout_margin="@dimen/_8sdp"
        android:src="@drawable/invalid_name" />

</FrameLayout>