<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <FrameLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:background="#393737"
            android:layout_marginTop="@dimen/_4sdp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#282525"
                android:fontFamily="@font/bauhausregular"
                android:gravity="center"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Device Pin"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDevicePin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_24sdp"
                android:maxLength="6"
                android:layout_marginBottom="@dimen/_40sdp"
                android:background="@drawable/curveedittext_bg"
                android:digits="0123456789"
                android:fontFamily="@font/bauhausregular"
                android:hint="Enter Device Pin"
                android:inputType="number"
                android:padding="@dimen/_12sdp"
                android:singleLine="true"
                android:textColor="#fff"
                android:textColorHint="#646363"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/errortvDevicePin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_minus36sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_24sdp"
                android:text="*Please enter a valid device pin."
                android:textColor="@color/colorAccent"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/device_pin_close"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_gravity="right|top"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/invalid_name" />


    </FrameLayout>


</FrameLayout>