                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/lamp_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/bulb_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/fan_icon_white" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:maxLength="20"
                    android:paddingLeft="@dimen/_6sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/bauhausregular"
                    android:background="@drawable/custom_edittext_background"
                    android:hint="Switch item name"
                    android:textColor="#fff"
                    android:textColorHint="#797878" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/bauhausregular"
                android:paddingLeft="@dimen/_12sdp"
                android:text="Switch 2"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/lamp_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/bulb_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/fan_icon_white" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:maxLength="20"
                    android:fontFamily="@font/bauhausregular"
                    android:paddingLeft="@dimen/_6sdp"
                    android:singleLine="true"
                    android:background="@drawable/custom_edittext_background"
                    android:hint="Switch item name"
                    android:textColor="#fff"
                    android:textColorHint="#797878" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/bauhausregular"
                android:paddingLeft="@dimen/_12sdp"
                android:text="Switch 3"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/lamp_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/bulb_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/fan_icon_white" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:maxLength="20"
                    android:paddingLeft="@dimen/_6sdp"
                    android:fontFamily="@font/bauhausregular"
                    android:singleLine="true"
                    android:background="@drawable/custom_edittext_background"
                    android:hint="Switch item name"
                    android:textColor="#fff"
                    android:textColorHint="#797878" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/bauhausregular"
                android:paddingLeft="@dimen/_12sdp"
                android:text="Switch 4"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/lamp_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/bulb_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/fan_icon_white" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:maxLength="20"
                    android:paddingLeft="@dimen/_6sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/bauhausregular"
                    android:background="@drawable/custom_edittext_background"
                    android:hint="Switch item name"
                    android:textColor="#fff"
                    android:textColorHint="#797878" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/bauhausregular"
                android:paddingLeft="@dimen/_12sdp"
                android:text="Switch 5"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/lamp_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/bulb_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/fan_icon_white" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:maxLength="20"
                    android:paddingLeft="@dimen/_6sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/bauhausregular"
                    android:background="@drawable/custom_edittext_background"
                    android:hint="Switch item name"
                    android:textColor="#fff"
                    android:textColorHint="#797878" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/bauhausregular"
                android:paddingLeft="@dimen/_12sdp"
                android:text="Switch 6"
                android:textColor="#fff"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/lamp_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/bulb_icon_white" />

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/fan_icon_white" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:maxLength="20"
                    android:paddingLeft="@dimen/_6sdp"
                    android:singleLine="true"
                    android:background="@drawable/custom_edittext_background"
                    android:hint="Switch item name"
                    android:textColor="#fff"
                    android:fontFamily="@font/bauhausregular"
