<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dialog_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:background="@color/dialog_header"
                    android:fontFamily="@font/bauhausregular"
                    android:gravity="center"
                    android:text="@string/item_device_pin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bauhausregular"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/change_pin_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/pineditnew"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/curveedittext_bg"
                        android:fontFamily="@font/bauhausregular"
                        android:hint="@string/change_pin_hint1"
                        android:inputType="number"
                        android:maxLength="8"
                        android:padding="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/errorpinnew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bauhausregular"
                        android:text="@string/change_pin_validation1"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_10ssp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/pineditconfirm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/curveedittext_bg"
                        android:fontFamily="@font/bauhausregular"
                        android:hint="@string/change_pin_hint2"
                        android:inputType="number"
                        android:maxLength="8"
                        android:padding="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"  />

                    <TextView
                        android:id="@+id/errorpinconfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bauhausregular"
                        android:text="@string/change_pin_validation2"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_10ssp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/pinchangelater"
                        android:layout_width="@dimen/_95sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_bg"
                        android:fontFamily="@font/baumans"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/later"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        />

                    <Button
                        android:id="@+id/updatepin"
                        android:layout_width="@dimen/_95sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="@drawable/button_bg"
                        android:fontFamily="@font/baumans"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/update"
                        android:textAllCaps="false"
                        android:textColor="@color/selected"
                        android:textSize="@dimen/_15ssp" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/change_pin_close"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/invalid_name" />
    </FrameLayout>
</layout>