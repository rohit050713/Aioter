<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#393737"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:background="#282525"
                    android:fontFamily="@font/baumans"
                    android:gravity="center"
                    android:text="Device Pin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baumans"
                    android:gravity="center"
                    android:padding="@dimen/_20sdp"
                    android:text="We recommend you to change \nyour device pin to protect \nthe system"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/pineditnew"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/custom_edittext_background"
                        android:fontFamily="@font/baumans"
                        android:gravity="center_vertical"
                        android:hint="Enter New Device Pin"
                        android:inputType="number"
                        android:maxLength="8"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/errorpinnew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baumans"
                        android:text="Device Pin"
                        android:textColor="#f47733"
                        android:textSize="@dimen/_15ssp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/pineditconfirm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/custom_edittext_background"
                        android:fontFamily="@font/baumans"
                        android:gravity="center_vertical"
                        android:hint="Confirm New Device Pin"
                        android:inputType="number"
                        android:maxLength="8"
                        android:padding="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/errorpinconfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baumans"
                        android:text="Device Pin"
                        android:textColor="#f47733"
                        android:textSize="@dimen/_15ssp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <Button
                        android:id="@+id/pinchangelater"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#282525"
                        android:fontFamily="@font/baumans"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Later"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15ssp" />

                    <Button
                        android:id="@+id/updatepin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="#282525"
                        android:fontFamily="@font/baumans"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_15ssp" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/changepincross"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:src="@drawable/invalid_name" />
    </FrameLayout>
</layout>